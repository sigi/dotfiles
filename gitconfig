[apply]
  whitespace = nowarn
[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local   = yellow
  remote  = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old  = red bold
  new  = green bold
[color "status"]
  added     = yellow
  changed   = green
  untracked = cyan
[alias]
  st  = status
  ci  = commit -v
  br  = branch
  co  = checkout
  wdf = diff --color-words
  lp  = log -p
  idx = diff --cached
  au  = add -u
  dt  = describe --tags
[user]
  name = Frank Luithle
  email = f.luithle@mgate.tv
[push]
  default = tracking
[merge]
  tool = meld
[gui]
  fontdiff = -family fixed -size 10 -weight normal -slant roman -underline 0 -overstrike 0
